<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PlayFut.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PlayFut"
    Title="PlayFut">

    <FlyoutItem Title="Usuários">
        
        <ShellContent
            Title="Usuarios"
            ContentTemplate="{DataTemplate local:ListagemUsuarios}"
            Route="ListagemUsuarios" />

        <ShellContent
            Title="Cadastro"
            ContentTemplate="{DataTemplate local:CadastroUsuarios}"
            Route="CadastroUsuarios" />
        
    </FlyoutItem>

    <FlyoutItem Title="Quadras">

        <ShellContent
            Title="Quadras"
            ContentTemplate="{DataTemplate local:ListagemQuadras}"
            Route="ListagemQuadras" />

        <ShellContent
            Title="Cadastro"
            ContentTemplate="{DataTemplate local:CadastroQuadras}"
            Route="CadastroQuadras" />

    </FlyoutItem>

    <FlyoutItem Title="Locação">

        <ShellContent
            Title="Listagem"
            ContentTemplate="{DataTemplate local:ListaLocacoes}"
            Route="ListaLocacoes" />

    </FlyoutItem>


</Shell>
