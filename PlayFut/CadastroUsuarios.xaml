<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlayFut.CadastroUsuarios"
             Title="CadastroUsuarios">
    <VerticalStackLayout>

        <Label Text="Digite o nome"/>
        <Entry x:Name="EntryNome"/>
        
        <Label Text="Digite o email"/>
        <Entry x:Name="EntryEmail"/>

        <Label Text="Digite o cpf"/>
        <Entry x:Name="EntryCpf"/>

        <Label Text="Digite a senha"/>
        <Entry x:Name="EntrySenha"/>

        <Label Text="Digite o nascimento"/>
        <DatePicker x:Name="EntryNascimento" MinimumDate="01/01/1901"
            MaximumDate="12/31/2025"
            Date="06/21/2022" />

        <Button Text="Salvar" Clicked="Salvar_Clicked"/>

    </VerticalStackLayout>
</ContentPage>