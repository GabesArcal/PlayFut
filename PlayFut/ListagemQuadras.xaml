<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlayFut.ListagemQuadras"
             Title="Listagem de Quadras">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="10" Spacing="10">
                <ListView x:Name="Lista"
                      HasUnevenRows="True"
                      SeparatorVisibility="None"
                      BackgroundColor="White">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Frame Margin="5"
                                   Padding="10"
                                   CornerRadius="12"
                                   BackgroundColor="#F7F7F7"
                                   HasShadow="True">
                                    <VerticalStackLayout Spacing="4">
                                        <Label Text="{Binding nome_local}"
                                           FontAttributes="Bold"
                                           FontSize="18"
                                           TextColor="#2C3E50" />
                                        <Label Text="{Binding localizacao}"
                                           FontSize="14"
                                           TextColor="#7F8C8D" />
                                        <Grid ColumnSpacing="8" RowSpacing="4">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Label Text="Nascimento:" Grid.Row="0" Grid.Column="0" TextColor="#999"/>
                                            <Label Text="{Binding tipo_quadra}" Grid.Row="0" Grid.Column="1" TextColor="#333"/>

                                            <Label Text="CPF:" Grid.Row="1" Grid.Column="0" TextColor="#999"/>
                                            <Label Text="{Binding preco}" Grid.Row="1" Grid.Column="1" TextColor="#333"/>

                                            <Label Text="CPF:" Grid.Row="2" Grid.Column="0" TextColor="#999"/>
                                            <Label Text="{Binding dimensoes}" Grid.Row="2" Grid.Column="1" TextColor="#333"/>

                                            <Label Text="Criado em:" Grid.Row="3" Grid.Column="0" TextColor="#999"/>
                                            <Label Text="{Binding iluminação}" Grid.Row="3" Grid.Column="1" TextColor="#333"/>

                                            <Label Text="Nascimento:" Grid.Row="4" Grid.Column="0" TextColor="#999"/>
                                            <Label Text="{Binding vestiario}" Grid.Row="4" Grid.Column="1" TextColor="#333"/>

                                            <Label Text="CPF:" Grid.Row="5" Grid.Column="0" TextColor="#999"/>
                                            <Label Text="{Binding bebedouro}" Grid.Row="5" Grid.Column="1" TextColor="#333"/>

                                            <Label Text="CPF:" Grid.Row="6" Grid.Column="0" TextColor="#999"/>
                                            <Label Text="{Binding estacionamento}" Grid.Row="6" Grid.Column="1" TextColor="#333"/>

                                            <Label Text="Criado em:" Grid.Row="7" Grid.Column="0" TextColor="#999"/>
                                            <Label Text="{Binding arquibancada}" Grid.Row="7" Grid.Column="1" TextColor="#333"/>

                                            <Label Text="CPF:" Grid.Row="8" Grid.Column="0" TextColor="#999"/>
                                            <Label Text="{Binding coberta}" Grid.Row="8" Grid.Column="1" TextColor="#333"/>

                                            <Label Text="Criado em:" Grid.Row="9" Grid.Column="0" TextColor="#999"/>
                                            <Label Text="{Binding acessibilidade}" Grid.Row="9" Grid.Column="1" TextColor="#333"/>

                                            <Label Text="Criado em:" Grid.Row="10" Grid.Column="0" TextColor="#999"/>
                                            <Label Text="{Binding wifi}" Grid.Row="10" Grid.Column="1" TextColor="#333"/>

                                            <Label Text="CPF:" Grid.Row="11" Grid.Column="0" TextColor="#999"/>
                                            <Label Text="{Binding imagem_principal}" Grid.Row="11" Grid.Column="1" TextColor="#333"/>

                                            <Label Text="Criado em:" Grid.Row="12" Grid.Column="0" TextColor="#999"/>
                                            <Label Text="{Binding imagem_1}" Grid.Row="12" Grid.Column="1" TextColor="#333"/>

                                            <Label Text="Criado em:" Grid.Row="13" Grid.Column="0" TextColor="#999"/>
                                            <Label Text="{Binding imagem_2}" Grid.Row="13" Grid.Column="1" TextColor="#333"/>

                                            <Label Text="Criado em:" Grid.Row="14" Grid.Column="0" TextColor="#999"/>
                                            <Label Text="{Binding imagem_3}" Grid.Row="14" Grid.Column="1" TextColor="#333"/>

                                        </Grid>
                                    </VerticalStackLayout>
                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>